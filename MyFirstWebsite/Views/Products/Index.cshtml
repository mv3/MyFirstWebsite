@model List<TheSnackHole.Models.Product>
@{
    ViewBag.Title = "Products";
}

@Html.Partial("_Message")
<h2>Products</h2>


<style>
    table {
        border-collapse: collapse;
        width: 100%;
    }

    th, td {
        text-align: left;
        padding: 8px;
    }

    tr:nth-child(even) {
        background-color: #f2f2f2
    }

    th {
        background-color: #000000;
        color: white;
    }
</style>

<div class="pull-right">
    <a href="@Url.Action("Add")" class="btn btn-primary btn-lg">
        <span class="glyphicon glyphicon-plus"></span> Add Product
    </a>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Product</th>
            <th>Description</th>
            <th>Price</th>
            <th>&nbsp;</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>
                    @Html.Encode(product.DisplayText)
                </td>
                <td>
                    @Html.Encode(product.Description)
                </td>
                <td>
                    @Html.Encode(product.Price)
                </td>
                <td>
                    <div class="pull-right">
                        <a href="@Url.Action("Detail", new { id = product.ProductId })" class="btn btn-primary btn-xs margin-right">
                            <span class="glyphicon glyphicon-info-sign"></span><span class="hidden-xs"> Detail</span>
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>